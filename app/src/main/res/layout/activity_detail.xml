<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.popularmovies.DetailActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_textview"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:padding="16dp"
        android:background="@color/colorAccent"
        tools:text="Interstellar"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            tools:layout_width="146dp"
            tools:layout_height="165dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/iv_image_detail"
            android:layout_margin="8dp"
            android:contentDescription="@string/poster"
            app:srcCompat="@drawable/placeholder_error"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_textview"
            android:layout_marginTop="8dp" />

        <include
            layout="@layout/movie_details"
            android:layout_height="0dp"
            android:id="@+id/include"

            android:layout_width="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_textview"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_image_detail"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_image_detail" />



    <ScrollView
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:id="@+id/scroll_description_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_detail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_overview"
            android:textSize="21sp"
            tools:text="@string/lorem_ipsum"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

    </ScrollView>


</android.support.constraint.ConstraintLayout>
